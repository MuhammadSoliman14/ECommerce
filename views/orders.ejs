<%- include('../partials/header', { title: 'Order Management' }) %>
<main>
    <h2>Order Management</h2>
    <p>View and manage customer orders.</p>
    
    <!-- Display Orders -->
    <section>
        <h3>Orders</h3>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.customerName %></td>
                        <td><%= order.orderDate.toDateString() %></td>
                        <td><%= order.status %></td>
                        <td>
                            <a href="/orders/<%= order._id %>/details">View Details</a>
                            <% if (order.status === 'Pending') { %>
                                <a href="/orders/<%= order._id %>/cancel">Cancel Order</a>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
    
    <!-- Order Details -->
    <section>
        <!-- Implement order details view here -->
    </section>
    
    <!-- Order Actions -->
    <section>
        <!-- Implement order actions such as cancel, update status, etc. -->
    </section>
</main>
<%- include('../partials/footer') %>
